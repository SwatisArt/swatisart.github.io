<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}{{ site.title or "Swati's Artistry" }}</title>
    <link rel="icon" type="image/png" href="/images/general/icon.png">
    <link rel="shortcut icon" type="image/png" href="/images/general/icon.png">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="main-header">
        <div class="logo-container">
            <img src="/images/general/logo.png" alt="Swati's Artistry" class="logo">
            <h1 class="business-name">Swati's Artistry</h1>
        </div>
        <nav class="main-nav">
            <button class="mobile-menu-toggle" aria-label="Toggle menu">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>
            <ul class="nav-menu">
                <li><a href="/" {% if page.url == "/" %}class="active"{% endif %}>Home</a></li>
                <li><a href="/henna/" {% if page.url == "/henna/" %}class="active"{% endif %}>Henna</a></li>
                <li><a href="/makeup/" {% if page.url == "/makeup/" %}class="active"{% endif %}>Makeup</a></li>
                <li><a href="/facials/" {% if page.url == "/facials/" %}class="active"{% endif %}>Facials</a></li>
                <li><a href="/massages/" {% if page.url == "/massages/" %}class="active"{% endif %}>Massages</a></li>
                <li><a href="/contact/" {% if page.url == "/contact/" %}class="active"{% endif %}>Contact</a></li>
            </ul>
        </nav>
    </header>
    
    <main class="main-content">
        {{ content | safe }}
    </main>
    
    <footer class="main-footer">
        <div class="footer-content">
            <div class="contact-info">
                <p><strong>Swati's Artistry</strong></p>
                <p>Phone: (513) 291-6635</p>
                <p>Email: swatisbeautyatelier@gmail.com</p>
            </div>
            <div class="social-links">
                <a href="https://www.instagram.com/swatis_artistry" class="social-link">
                    <img src="/images/general/Instagram_Logo.png" alt="Instagram" class="social-icon">
                </a>
            </div>
        </div>
        <p class="copyright">&copy; 2025 Swati's Artistry. All rights reserved.</p>
    </footer>

    <script>
        // Mobile menu toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
            const navMenu = document.querySelector('.nav-menu');
            
            mobileMenuToggle.addEventListener('click', function() {
                navMenu.classList.toggle('active');
                mobileMenuToggle.classList.toggle('active');
            });

            // Close menu when clicking on a link
            const navLinks = document.querySelectorAll('.nav-menu a');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    navMenu.classList.remove('active');
                    mobileMenuToggle.classList.remove('active');
                });
            });

            // Close menu when clicking outside
            document.addEventListener('click', function(event) {
                if (!mobileMenuToggle.contains(event.target) && !navMenu.contains(event.target)) {
                    navMenu.classList.remove('active');
                    mobileMenuToggle.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>
